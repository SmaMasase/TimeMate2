<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ðŸ” Permission to post notifications -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TimeMate2"
        tools:targetApi="31">

        <!-- ðŸ” Notification broadcast receiver -->
        <receiver
            android:name=".NotificationReceiver"
            android:exported="false" />

        <!-- ðŸ“… Appointment booking activity -->
        <activity
            android:name=".AppointmentActivity"
            android:exported="false" />

        <!-- ðŸ”” Staff notifications activity -->
        <activity
            android:name=".StaffNotificationsActivity"
            android:exported="false" />

        <!-- ðŸ“š Module dashboard activity -->
        <activity android:name=".ModulesActivity" />

        <!-- âœ… Feedback activity -->
        <activity android:name=".FeedbackActivity" />

        <!-- ðŸš€ Main launcher activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
